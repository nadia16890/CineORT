@model CineORT.Models.Usuario

@{
    ViewData["Title"] = "LoginUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>BIENVENIDO</h1>


<h4>Por favor, ingresá tu usuario y contraseña:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Create" asp-controller="Reservas"><input type="button" value="Ingresar" class="btn btn-primary" /></a>
            </div>
        </form>
    </div>
</div>



















@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}