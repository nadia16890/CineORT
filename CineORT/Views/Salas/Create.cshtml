@model CineORT.Models.Salas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Salas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadLugares" class="control-label"></label>
                <input asp-for="CantidadLugares" class="form-control" />
                <span asp-validation-for="CantidadLugares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar Sala" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MenuPrincipalAdministrador" asp-controller="Administradors">Volver a Menú Principal Administrador</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
